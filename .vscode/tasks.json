{
    "version": "2.0.0",
    "tasks": [
		{
            "label": "MAKE DEBUGGDB",
            "type": "shell",
            "command": "make debuggdb",
            "group": {
                "kind": "build",
                "isDefault": true
            }
    	},
       {
           	"label": "g++ build active file",
			"type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ]
}